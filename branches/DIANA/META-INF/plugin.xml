<!DOCTYPE idea-plugin PUBLIC "Plugin/DTD" "http://plugins.intellij.net/plugin.dtd">
<idea-plugin url="http://code.google.com/p/intellistripes" version="2">
	<name>IntelliStripes</name>
	<description>Stripes even more easy !!!</description>
	<version>2.0.5</version>
	<vendor email="intellistripes@gmail.com" logo="/resources/icons/StripesIcon.png"
	        url="http://www.jroller.com/neuronica/">Mario Arias, Evgeny Shepelyuk
	</vendor>
	<change-notes>
		<![CDATA[
<p>Final version. Many improvements and bug fixes. Diana compatible only.</p>
<p>Full support for EL expressions in @Validate annotation2</p>
<br/>
<br/>
Changelog is <a href="http://code.google.com/p/intellistripes/wiki/VersionHistory2">HERE</a>
]]>
	</change-notes>
	<idea-version since-build="9013" until-build="9999"/>
	<depends>com.intellij.css</depends>
	<depends>com.intellij.javaee</depends>
	<depends>com.intellij.spring</depends>
	<depends>JavaScript</depends>
	<depends>RegExpLanguage</depends>

	<extensions xmlns="com.intellij">
		<customPropertyScopeProvider implementation="org.intellij.stripes.util.StripesPropertyScopeProvider"/>
		<!--<findUsagesHandlerFactory implementation="org.intellij.stripes.util.StripesFindUsagesHandlerFactory"/>-->

		<psi.referenceContributor
			implementation="org.intellij.stripes.reference.contributors.SetterReferenceContributor"/>
		<psi.referenceContributor
			implementation="org.intellij.stripes.reference.contributors.ResolutionReferenceContributor"/>
		<psi.referenceContributor
			implementation="org.intellij.stripes.reference.contributors.StaticReferenceContributor"/>
		<psi.referenceContributor
			implementation="org.intellij.stripes.reference.contributors.GetterReferenceContributor"/>

		<fileTemplateGroup implementation="org.intellij.stripes.support.StripesFileTemplateGroupFactory"/>
		<javaee.jsp.elImplicitVariablesProvider implementation="org.intellij.stripes.el.StripesELVarProvider"/>
		<annotator language="JAVA" implementationClass="org.intellij.stripes.highlighting.ActionBeanUsageAnnotator"/>
		<pathReferenceProvider
			implementation="org.intellij.stripes.reference.providers.UrlBindingPathReferenceProvider"/>
		<inspectionToolProvider implementation="org.intellij.stripes.highlighting.StripesInspectionToolProvider"/>
		<projectService serviceInterface="org.intellij.stripes.facet.StripesFacetConfiguration"
		                serviceImplementation="org.intellij.stripes.facet.StripesFacetConfiguration"/>
		<iconProvider implementation="org.intellij.stripes.reference.providers.StripesIconProvider"/>
		<multiHostInjector implementation="org.intellij.stripes.util.StripesJSInjector"/>
		<multiHostInjector implementation="org.intellij.stripes.util.StripesCSSInjector"/>
		<multiHostInjector implementation="org.intellij.stripes.util.StripesELInjector"/>
	</extensions>
	<application-components>
		<component>
			<implementation-class>org.intellij.stripes.components.application.StripesApplicationComponent
			</implementation-class>
		</component>
	</application-components>
	<project-components>
		<component>
			<implementation-class>org.intellij.stripes.components.project.StripesReferencesComponent
			</implementation-class>
		</component>
	</project-components>
	<actions>

		<action id="StripesGenerateGroup" class="org.intellij.stripes.actions.StripesGenerateGroup" text="Stripes">
			<add-to-group anchor="first" group-id="GenerateGroup"/>
		</action>

		<action id="StripesNewGroup" class="org.intellij.stripes.actions.StripesNewGroup" text="Stripes">
			<add-to-group anchor="last" group-id="NewGroup"/>
		</action>

	</actions>
</idea-plugin>